{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Source directory for TypeScript files
    "strict": true, // Enable strict type checking
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Skip type checking of declaration files
    "declaration": true, // Generate declaration files (.d.ts)
    "removeComments": true, // Remove comments from compiled output
    "sourceMap": true, // Generate source maps for better debugging
    "resolveJsonModule": true, // Enable importing JSON modules
    "baseUrl": "./", // Base URL for module resolution
    "paths": {
      "*": ["src/*"] // Custom path mapping
    }
  },
  "include": [
    "src/**/*.ts" // Include TypeScript files in the "src" directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "dist" // Exclude the output directory
  ]
}
